    "pdu",
    "websocket",
    "simulation",
    "rpc"
  ],
  "author": "Hakoniwa Lab <info@hakoniwa-lab.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hakoniwalab/hakoniwa-pdu-javascript/issues"
  },
  "homepage": "https://github.com/hakoniwalab/hakoniwa-pdu-javascript#readme",
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "publishConfig": {
